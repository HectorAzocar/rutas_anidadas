<h1>New building</h1>

<%= form_with(model: @building, local: true) do |f| %>

    <div>
        <%= f.label 'name' %>
        <%= f.text_field :name%>
    </div>

    <div>
        <%= f.label 'address' %>
        <%= f.text_field :address %>
    </div>

    <div>
        <%= f.submit %>
    </div>
<% end %>

<%= link_to  "Back", buildings_path %>